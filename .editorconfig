# https://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
indent_size = 1
trim_trailing_whitespace = false

[*.{c,h,cpp,hpp}]
indent_size = 2

[*.{json,yml,yaml,toml}]
indent_size = 2

[*.bat]
end_of_line = crlf
indent_style = tab

[Makefile]
indent_style = tab
